{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/mainMenu.cpp",
        "${workspaceFolder}/src/player.cpp",
        "${workspaceFolder}/src/guard.cpp",
        "${workspaceFolder}/src/gameObj.cpp",
        "${workspaceFolder}/src/mapLoader.cpp",
        "${workspaceFolder}/src/interactionManager.cpp",
        "${workspaceFolder}/src/pathfinder.cpp",
        "${workspaceFolder}/src/level.cpp",
        "${workspaceFolder}/src/metaDataLoader.cpp",
        "${workspaceFolder}/src/levelMenu.cpp",
        "${workspaceFolder}/src/levelmanager.cpp",
        "${workspaceFolder}/src/distraction.cpp",
        "-o",
        "${workspaceFolder}/build/silent_escape",
        "-I",
        "D:/SFML-3.0.0/include",
        "-I",
        "${workspaceFolder}/include",
        "-L",
        "D:/SFML-3.0.0/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-lsfml-audio",
        "-static-libstdc++",
        "-static-libgcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
